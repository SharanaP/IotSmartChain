<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="70dp"></corners>
            <stroke android:width="2dp" android:color="@color/color_Accent"></stroke>
            <gradient android:angle="-90" android:endColor="@color/color_grey" android:startColor="@color/color_grey"></gradient>

        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="70dp"></corners>
            <stroke android:width="1dp" android:color="@color/color_PrimaryDark"></stroke>
            <solid android:color="#c0c0c0"></solid>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="70dp" />
            <gradient android:angle="-90" android:endColor="#c0c0c0" android:startColor="@color/color_PrimaryDark"></gradient>
        </shape>
    </item>
</selector>