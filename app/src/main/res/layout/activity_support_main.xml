<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_screen_two"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center_horizontal"
        android:titleTextColor="@color/color.white"
        android:visibility="visible"
        app:theme="@style/ToolbarColoredBackArrow"
        app:titleTextColor="@color/color.white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <!--Call Us card view-->
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_call"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/color_yellow_light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView_call_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_call_black_24dp"/>

                <View
                    android:id="@+id/view_line_call"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/imageView_call_icon"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/color_orange"/>

                <TextView
                    android:id="@+id/textView_call_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call Us At"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/view_line_call"
                    android:textColor="@color/color_orange"/>

                <TextView
                    android:id="@+id/textView_call_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic|bold"
                    android:layout_below="@+id/textView_call_title"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/view_line_call"
                    android:textColor="@color/color_yellow"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!--Mail Us -->
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_mail"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/color_yellow_light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView_mail_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_email_yellow_24dp"/>

                <View
                    android:id="@+id/view_line_mail"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/imageView_mail_icon"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/color_orange"/>

                <TextView
                    android:id="@+id/textView_mail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mail Us At"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/view_line_mail"
                    android:textColor="@color/color_orange"/>

                <TextView
                    android:id="@+id/textView_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iSmartLink.Support@geokno.com"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic|bold"
                    android:layout_below="@+id/textView_mail_title"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/view_line_mail"
                    android:textColor="@color/color_yellow"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Chat card view -->
        <android.support.v7.widget.CardView
            android:id="@+id/cardView_chat"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/color_yellow_light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/imageView_chat_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/chat_message_icon"/>

                <View
                    android:id="@+id/view_line_chat"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/imageView_chat_icon"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/color_orange"/>

                <TextView
                    android:id="@+id/textView_chat_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chat with Us"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic|bold"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/view_line_chat"
                    android:textColor="@color/color_orange"/>

                <TextView
                    android:id="@+id/textView_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type your message..."
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="italic|bold"
                    android:layout_below="@+id/textView_chat_title"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/view_line_chat"
                    android:textColor="@color/color_yellow"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>