<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/color_actionBar"
        android:gravity="center|center_horizontal"
        android:text="Update Profile Info "
        android:textColor="@color/color_white"
        android:textSize="19sp"
        android:textStyle="bold|italic" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_title">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_title"
                android:orientation="vertical">

                <!--First name -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color_silver">

                    <EditText
                        android:id="@+id/edittext_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:inputType="text"
                        android:textColor="@color/color_grey_dark"
                        android:textColorHighlight="@color/color_grey_dark"
                        android:textColorHint="#C0C0C0"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                </android.support.design.widget.TextInputLayout>

                <!--Last Name-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color_silver">

                    <EditText
                        android:id="@+id/edittext_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:inputType="text"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_grey_dark"
                        android:textColorHighlight="@color/color_grey_dark"
                        android:textColorHint="#C0C0C0"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <!--Phone number-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color_silver">

                    <EditText
                        android:id="@+id/edittext_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edittext_iot_label"
                        android:hint="Phone"
                        android:inputType="phone|number"
                        android:maxLength="10"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/color_grey_dark"
                        android:textColorHighlight="@color/color_grey_dark"
                        android:textColorHint="#C0C0C0"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>