<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_splash_screen">

        <!--Tool bar -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center_horizontal"
            android:background="@color/color_actionBar"
            android:titleTextColor="@color/color_silver"
            android:visibility="visible"
            app:theme="@style/ToolbarColoredBackArrow"
            app:titleTextColor="@color/color_silver" />

        <ProgressBar
            android:id="@+id/progressBar_reset"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:theme="@style/CircularProgress"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/relativeLayout_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

            <LinearLayout
                android:id="@+id/linearlayout_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"

                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        app:cardBackgroundColor="@color/color_yellow_light">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="bottom|center"
                            android:gravity="center|bottom"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/image_app_icon"
                                android:layout_width="200dp"
                                android:layout_height="80dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/app_title" />

                            <EditText
                                android:id="@+id/editText_email_mob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image_app_icon"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:hint="Enter email Id"
                                android:inputType="text"
                                android:textColor="@color/color_silver"
                                android:textColorHint="@color/color_silver"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/editText_email_otp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/editText_email_mob"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:hint="Enter OTP "
                                android:inputType="number"
                                android:maxLength="4"
                                android:textColor="@color/color_silver"
                                android:textColorHint="@color/color_silver"
                                android:textSize="18sp"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/button_send_reset_link"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/editText_email_otp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/mysignin_button"
                                android:text="Send reset link"
                                android:textColor="@color/color_yellow"
                                android:textSize="15dp"
                                android:textStyle="normal" />

                            <Button
                                android:id="@+id/button_send_otp"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/editText_email_otp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="left"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/mysignin_button"
                                android:text="Submit OTP"
                                android:textColor="@color/color_yellow"
                                android:textSize="15dp"
                                android:textStyle="normal" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/color_yellow_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/editText_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:hint="New Password"
                                    android:inputType="textPassword"
                                    android:textColor="@color/color_silver"
                                    android:textColorHint="@color/color_silver"
                                    android:textSize="18sp" />

                                <ImageButton
                                    android:id="@+id/ic_newShowPassword"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_visibility_24dp"
                                    android:tint="@color/color_silver" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/editText_reenter_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:hint="Re-enter New Password"
                                    android:inputType="textPassword"
                                    android:textColor="@color/color_silver"
                                    android:textColorHint="@color/color_silver"
                                    android:textSize="18sp" />

                                <ImageButton
                                    android:id="@+id/ic_reEnterShowPassword"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_visibility_24dp"
                                    android:tint="@color/color_silver" />

                            </RelativeLayout>

                            <Button
                                android:id="@+id/button_submit"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/mysignin_button"
                                android:text="Submit"
                                android:textColor="@color/color_yellow"
                                android:textSize="15dp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>