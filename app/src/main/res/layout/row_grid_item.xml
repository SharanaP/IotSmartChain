<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <!--Unread count -->
        <!-- <TextView
             android:id="@+id/textview_grid_unread"
             android:layout_width="25sp"
             android:layout_height="25sp"
             android:layout_alignTop="@id/cardView"
             android:layout_alignParentRight="true"
             android:layout_marginTop="-5dp"
             android:layout_marginRight="1dp"
             android:background="@drawable/badge_background"
             android:gravity="center"
             android:textColor="@color/color_white"
             android:visibility="visible" />-->

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/relativeLayout_grid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <!--title-->
                <TextView
                    android:id="@+id/textview_grid_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="notification title"
                    android:textColor="@color/color_grey_dark"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
                <!--line-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@id/textview_grid_title"
                    android:background="@color/color_yellow" />
                <!--image view icon-->
                <ImageView
                    android:id="@+id/imageview_grid_icon"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/app_icon" />
                <!--TimeStamp-->
                <TextView
                    android:id="@+id/textview_last_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@+id/imageview_grid_icon"
                    android:layout_toRightOf="@+id/imageview_grid_icon"
                    android:gravity="right"
                    android:text="dd/mm/yyyy hh:mm a"
                    android:textColor="@color/color_grey_dark"
                    android:textSize="12sp"
                    android:textStyle="italic" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <!--Unread count-->
    <TextView
        android:id="@+id/textview_grid_unread"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignTop="@id/cardView"
        android:layout_alignParentRight="true"
        android:layout_gravity="top|right"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/badge_background"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:visibility="visible" />

</FrameLayout>