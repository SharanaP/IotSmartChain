<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Relative all notification-->
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="2dp">

                    <RelativeLayout
                        android:id="@+id/relativeLayout_all"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:elevation="6dp"
                            app:civ_border_color="@color/color_yellow"
                            app:civ_border_width="1dp"
                            app:srcCompat="@drawable/ic_notifications_black_24dp" />

                        <TextView
                            android:id="@+id/textView_all_notifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toEndOf="@+id/imageView_icon"
                            android:layout_toRightOf="@+id/imageView_icon"
                            android:text="All notifications"
                            android:textColor="@color/color_grey_medium"
                            android:textSize="16sp"
                            android:textStyle="italic|bold" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <TextView
                android:id="@+id/textView_unreadBadge"
                android:layout_width="23sp"
                android:layout_height="23sp"
                android:layout_alignTop="@+id/cardView"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_drawable"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="15sp"
                android:textStyle="italic"
                android:visibility="invisible" />

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:theme="@style/CircularProgress"
            android:visibility="gone" />

        <View
            android:id="@+id/progressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--GridView-->
        <GridView
            android:id="@+id/gridview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/frame_layout"
            android:columnWidth="150dp"
            android:gravity="center"
            android:horizontalSpacing="0dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0dp" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>