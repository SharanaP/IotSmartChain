<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_screen_two"
    android:orientation="vertical">

    <!--toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_actionBar"
        android:titleTextColor="@color/color_white"
        android:visibility="visible"
        app:theme="@style/ToolbarColoredBackArrow"
        app:titleTextColor="@color/color_white" />
    <!--ScrollView-->
    <ScrollView
        android:id="@+id/scrollView_floorplan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <!--options-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical">

            <!--Crate  a new -->
            <android.support.v7.widget.CardView
                android:id="@+id/cardview_new"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/color_yellow_light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_yellow_light">

                    <ImageView
                        android:id="@+id/imageview_new"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        app:srcCompat="@drawable/folder_plus" />

                    <View
                        android:id="@+id/view_line_new"
                        android:layout_width="1sp"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@+id/imageview_new"
                        android:layout_toRightOf="@+id/imageview_new"
                        android:background="@color/color_orange"
                        android:src="@color/color_orange" />

                    <TextView
                        android:id="@+id/textview_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/view_line_new"
                        android:layout_toRightOf="@+id/view_line_new"
                        android:gravity="left"
                        android:text="Create"
                        android:textColor="@color/color_orange"
                        android:textSize="22sp"
                        android:textStyle="bold|italic" />


                    <TextView
                        android:id="@+id/textview_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Create a new floor plan "
                        android:textColor="@color/color_silver"
                        android:textSize="12sp"
                        android:textStyle="bold|italic" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <!--Import-->
            <android.support.v7.widget.CardView
                android:id="@+id/cardview_import"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/color_yellow_light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_yellow_light">

                    <ImageView
                        android:id="@+id/imageview_import"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        app:srcCompat="@drawable/file_import" />

                    <View
                        android:id="@+id/view_line_import"
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@+id/imageview_import"
                        android:layout_toRightOf="@+id/imageview_import"
                        android:background="@color/color_orange" />

                    <TextView
                        android:id="@+id/textview_import"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/view_line_import"
                        android:layout_toRightOf="@+id/view_line_import"
                        android:gravity="left"
                        android:text="Import"
                        android:textColor="@color/color_orange"
                        android:textSize="22sp"
                        android:textStyle="bold|italic" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="format .dxf / .dwg file"
                        android:textColor="@color/color_silver"
                        android:textSize="12sp"
                        android:textStyle="bold|italic" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <!--view List-->
            <android.support.v7.widget.CardView
                android:id="@+id/cardview_list"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/color_yellow_light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_yellow_light">

                    <ImageView
                        android:id="@+id/imageview_list"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        app:srcCompat="@drawable/view_list" />

                    <View
                        android:id="@+id/view_line_list"
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@+id/imageview_list"
                        android:layout_toRightOf="@+id/imageview_list"
                        android:background="@color/color_orange" />

                    <TextView
                        android:id="@+id/textview_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/view_line_list"
                        android:layout_toRightOf="@+id/view_line_list"
                        android:gravity="left"
                        android:text="List"
                        android:textColor="@color/color_orange"
                        android:textSize="22sp"
                        android:textStyle="bold|italic" />


                    <TextView
                        android:id="@+id/textview_sub_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="List of FloorPlans "
                        android:textColor="@color/color_silver"
                        android:textSize="12sp"
                        android:textStyle="bold|italic" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <!--Create Non-Spatial -->
            <android.support.v7.widget.CardView
                android:id="@+id/cardview_nonspatial"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/color_yellow_light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_yellow_light">

                    <ImageView
                        android:id="@+id/imageview_ns"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        app:srcCompat="@drawable/database" />

                    <View
                        android:id="@+id/view_line_ns"
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@+id/imageview_ns"
                        android:layout_toRightOf="@+id/imageview_ns"
                        android:background="@color/color_orange" />

                    <TextView
                        android:id="@+id/textview_ns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/view_line_ns"
                        android:layout_toRightOf="@+id/view_line_ns"
                        android:gravity="left"
                        android:text="Non-Spatial"
                        android:textColor="@color/color_orange"
                        android:textSize="22sp"
                        android:textStyle="bold|italic" />


                    <TextView
                        android:id="@+id/textview_sub_ns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Create a Non-Spatial Plan"
                        android:textColor="@color/color_silver"
                        android:textSize="12sp"
                        android:textStyle="bold|italic" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
    <!--progressbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressBar_webView"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
    <!--Next-->
    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/button_next"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/mysignin_button"
            android:text="Done"
            android:textColor="@color/color_white"
            android:textSize="13dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>