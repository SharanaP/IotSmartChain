<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_black_dark">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/transparent_black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview_dialog_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app_icon"/>

            <TextView
                android:id="@+id/textview_dialog_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NO INTERNET CONNECTION "
                android:layout_marginTop="20dp"
                android:layout_below="@+id/imageview_dialog_icon"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:typeface="monospace"
                android:textColor="@color/color_yellow"/>

            <Button
                android:id="@+id/button_try_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textview_dialog_msg"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_error_red_cc0000_24dp"
                android:text="Close"
                android:textColor="@color/color_silver"
                android:background="@drawable/myanalytics_bg"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>