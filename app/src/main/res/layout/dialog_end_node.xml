<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/color_actionBar"
        android:gravity="center|center_horizontal"
        android:text="EndNode"
        android:textColor="@color/color_white"
        android:textSize="19sp"
        android:textStyle="bold|italic" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_title">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_title"
                android:orientation="vertical">

                <!--Gateway serial number -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color_silver">

                    <EditText
                        android:id="@+id/edittext_end_node"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relativeLayout_header"
                        android:hint="EndNode UID"
                        android:inputType="text"
                        android:textColor="@color/color_grey_dark"
                        android:textColorHighlight="@color/color_grey_dark"
                        android:textColorHint="#C0C0C0"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                </android.support.design.widget.TextInputLayout>

                <!--Label-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color_silver">

                    <EditText
                        android:id="@+id/edittext_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edittext_iot_add"
                        android:hint="Label"
                        android:inputType="text"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/color_grey_dark"
                        android:textColorHighlight="@color/color_grey_dark"
                        android:textColorHint="#C0C0C0"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <!--Description-->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color_silver">

                    <EditText
                        android:id="@+id/edittext_iot_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edittext_iot_label"
                        android:hint="Description device located and information"
                        android:inputType="text"
                        android:maxLength="100"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/color_grey_dark"
                        android:textColorHighlight="@color/color_grey_dark"
                        android:textColorHint="#C0C0C0"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </android.support.design.widget.TextInputLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_black_dark" />

                <!--Latitude-->
                <RelativeLayout
                    android:id="@+id/relativeLayout_lat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/textview_lat_label"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="Latitude "
                        android:textColor="@color/color_grey_dark"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textview_colon1"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textview_lat_label"
                        android:gravity="center|center_vertical"
                        android:text=":"
                        android:textColor="@color/color_grey_dark"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textview_lat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textview_colon1"
                        android:gravity="left|center"
                        android:text=""
                        android:textColor="@color/color_grey_medium"
                        android:textSize="15dp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <!--Longitude-->
                <RelativeLayout
                    android:id="@+id/relativeLayout_lng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textview_lng_label"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="Longtitude "
                        android:textColor="@color/color_grey_dark"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textview_colon2"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textview_lng_label"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/color_grey_dark"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textview_lng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textview_colon2"
                        android:gravity="left|center"
                        android:text=""
                        android:textColor="@color/color_grey_medium"
                        android:textSize="15dp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <!--Address-->
                <RelativeLayout
                    android:id="@+id/relativeLayout_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textview_add_label"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="Address "
                        android:textColor="@color/color_grey_dark"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textView_colon3"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textview_add_label"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/color_grey_dark"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textview_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textView_colon3"
                        android:gravity="left|center"
                        android:text=""
                        android:textColor="@color/color_grey_medium"
                        android:textSize="14dp"
                        android:textStyle="normal" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>


</RelativeLayout>